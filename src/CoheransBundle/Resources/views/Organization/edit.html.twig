{% extends "CoheransBundle::layout.html.twig" %}

{% form_theme form 'CoheransBundle:Form:bootstrap-form-horizontal.html.twig' %}

{% block title "Modifier une organisation" %}
    
{% block heading %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Organisations <small>Modifier une organisation</small>
            </h1>
            <ol class="breadcrumb">
                <li class="">
                    <a href="{{ path('homepage') }}"><i class="fa fa-fw fa-dashboard"></i> Accueil</a>
                </li> 
                <li class="">
                    <a href="{{ path('organization') }}"><i class="fa fa-fw fa-building"></i> Organisations</a>
                </li>
                <li class="active">
                    <i class="fa fa-pencil"></i> Modifier
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
{% endblock %} 

{% block content -%}
    
    <div class="row">
        
        <div class="col-md-6">
            
            <form action="{{ path('organization_update', { 'id': organization.id }) }}" method="post" {{ form_enctype(form) }}>
                <input type="hidden" name="_method" value="PUT" />                
                {{ form_widget(form) }}
                <input type="submit" class="btn btn-primary" id="" value="Modifier"/>
              
            </form>           
           
        </div>
        <div class="col-md-12">    
            <ul class="list-inline text-right">
                <li>
                    <a href="{{ path('organization') }}">
                    Retour aux organisations
                    </a>
                </li>
            </ul>
                    
        </div>
        
    </div>




{% endblock %}

